{
  "name": "kostra-backend",
  "version": "1.0.0",
  "description": "Backend API for Kostra property rental platform",
  "main": "src/server.js",  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:kill": "for /f \"tokens=5\" %a in ('netstat -ano ^| findstr :5000') do taskkill /f /pid %a & npm run dev",
    "build": "npm install",
    "test": "jest",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "vercel-build": "npm install"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "rest-api",
    "vercel"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
